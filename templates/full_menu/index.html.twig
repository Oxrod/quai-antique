{% extends 'base.html.twig' %}

{% block title %}La carte | Quai Antique{% endblock %}

{% block body %}
    <main>
        <h1 class="m-3 text-center all-meals">Tous nos plats</h1>
        <hr class="mx-auto custom-title-underline">
        <section>
            {% for category in categories %}
                <div class="row d-flex justify-content-around gx-0 p-3">
                    <h1>{{ category.label }}</h1>
                    <div class="d-flex overflow-y-scroll">
                        {% for dish in dishes %}
                            {% if dish.category.name is same as category.name %}
                                <div class="card dish-card col-sm-6">
                                    <img class="card-img dish-image"
                                         src="uploads/images/{{ dish.image }}"
                                         alt="{{ dish.title }}"/>
                                    <div class="card-body">
                                        <h5 class="card-title fs-2">{{ dish.title }}</h5>
                                        <p class="card-text">{{ dish.description }}</p>
                                    </div>
                                    <div class="card-footer">{{ dish.price }} â‚¬</div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

        </section>
    </main>
{% endblock %}
